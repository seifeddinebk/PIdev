
{%extends 'admin/Base.html.twig'%}




{% block body %}
<div style="margin-right:50px;margin-left:350px">
<title>Assurance </title>
    <h1>Assurance </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
        
                <th>Telephone</th>
                <th>Mail</th>
                <th>Region</th>
                 <th>adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assurance in assurances %}
            <tr>
                <td>{{ assurance.id }}</td>
                <td>{{ assurance.nom }}</td>
              
                <td>{{ assurance.telephone }}</td>
                <td>{{ assurance.mail }}</td>
                <td>{{ assurance.region }}</td>
                <td>{{ assurance.region.adresse }}</td>
                <td>
                    <a href="{{ path('app_assurance_show', {'id': assurance.id}) }}" class="btn btn-warning text-dark px-3 mb-0 " data-toggle="tooltip" data-original-title="Edit user"> show </a>
                    <a href="{{ path('app_assurance_edit', {'id': assurance.id}) }}"class="btn btn-danger text-gradient px-3 mb-0" data-toggle="tooltip" data-original-title="Edit user">edit</a>
                </td>
            </tr>
         {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_assurance_new') }}"class="btn btn-success text-gradient px-3 mb-0">Create new</a>
    </div>
{% endblock %}
